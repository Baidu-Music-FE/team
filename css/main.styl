		$w = 150px
		$h = 150px
		$gap = -5
		.members
			position relative
			margin 50px auto 0
			width ($w + $gap) * 6 - $gap
			height $h * 3 - $gap * 3 * 2

			li
				position absolute
				width $w
				height $h
				top 0

				$poly_a = (2 + sqrt(3)) / 4 * 100%
				$poly_b = (2 - sqrt(3)) / 4 * 100%
				.clip 
					-webkit-clip-path: polygon(50% 0, $poly_a 25%, $poly_a 75%, 50% 100%, $poly_b 75%,  $poly_b 25%)
				
				img
					width 100%
					height 100%

				$offset = ($gap + $w) / 2
				for $num in (1..5)
					&:nth-child({$num})
						left ($w + $gap) * ($num - 1) + $offset
				for $num in (6..11)
					&:nth-child({$num})
						top $h + $gap * 4
						left ($w + $gap) * ($num - 6)
				for $num in (12..16)
					&:nth-child({$num})
						top ($h + $gap * 4) * 2
						left ($w + $gap) * ($num - 12) + $offset
				for $num in (1..16)
					&:nth-child({$num})
						-webkit-animation-delay: random(0.5, 2)s


